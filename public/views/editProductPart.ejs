<% if(productData[i].deleted != 'Yes') { %>

<div class="productBorder">
<table class="productTable table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">id:</th>
            <th scope="col">Produkt</th>
            <th scope="col">Release</th>
